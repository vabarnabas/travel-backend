// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  displayName  String
  userName     String   @unique
  email        String   @unique
  password     String
  isActive     Boolean
  refreshToken String?
  travels      Travel[]
}

model Travel {
  id        String   @id @default(uuid())
  startDate DateTime
  endDate   DateTime
  traveller User     @relation(fields: [userId], references: [id])
  userId    String
  pros      String[]
  contras   String[]
  country   String
  city      String
}
